.home

    background-color: #111

.post-item
    text-align left
    padding rem(40px) 0
    center(rem(1000px))
    +below(rem(1000px))
        padding-left rem(20px)
        padding-right rem(20px)
    .datetime
        col(1/6)
        text-align center
        text-decoration none
        +below(cut)
            stack()
        .day
            mainFont(800)
            color #252525
            font-size rem(80px)
            line-height 1.6
            +below(cut)
                stack()
        .month-year
            color #ccc
            font-size rem(18px)
    .content
        col(5/6)
        +below(cut)
            stack()
        a
            text-decoration none
        .date
            color darkerGray
        .post-title
            color lightGray
            font-size rem(32px)
            +below(cut)
                text-align center
        .description
            color darkerGray
            mainFont(300)
            font-size rem(20px)
            a
                color #83929d
                text-decoration underline
