html,
body
	height 100%


$bg-home
	height 100%
	background main
	background-image: url('/assets/img/space-bg2.jpg');
	background-size cover
	.content
		width 95%
		align(both)
		text-align center

$bg-post
	background main
	background-image: url('/assets/img/space-bg2.jpg');
	background-size cover
	height 40%
	.content
		width 95%
		align(both)
		text-align center

// Header home
.header-site
	@extends $bg-home
	h1,h2
		color: sec
		text-align center
	.site-logo
		margin-bottom 80px
	.site-title
		font-size rem(40px)
		line-height 1
		text-shadow: 1px 1px 12px rgba(0, 0, 0, .8);
		margin-top -80px
		display block
		+above(cut)
			margin-bottom 0
			font-size rem(80px)
	.site-description
		font-size rem(20px)
		text-shadow: 1px 1px 12px rgba(0, 0, 0, .8);
		display block
		margin rem(30px) 0
		+above(cut)
			font-size rem(35px)

// Header Post
.header-post
	@extends $bg-post
	.content
		+above(cut)
			center(1000px)
	.subheader
		display table
		padding 20px
		a
			border 2px solid sec
			border-radius 20px
			padding 0 10px
			+above(cut)
				padding 0 10px

	.date
		mainFont(300)
		font-size rem(16px)
	h1
		font-size rem(30px)
		margin 0 0 30px
		+above(cut)
			font-size rem(50px)
	.subtitle
		mainFont(300)
		font-size rem(20px)
		a
			color #fff
			text-decoration underline
	h1,.subtitle, .date
		color sec
		text-align center
	p
		color sec
		text-decoration none
		mainFont(300)
		font-size rem(18px)
